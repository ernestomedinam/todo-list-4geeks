{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-hooks"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "strict":0,
    "no-unused-vars": 0,
    "no-mixed-spaces-and-tabs": 0,
    "no-debugger": 0,
    "no-console": 1,
    "semi": ["error", "always"],
    "allowImportExportEverywhere": false,
    "comma-dangle": [1, {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "ignore",
    }],
    "react/prop-types": [2],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
